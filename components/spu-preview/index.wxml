<wxs src="../../wxs/price.wxs" module="p"></wxs>

<view data-pid="{{data.id}}" bind:tap="onItemTap" class="container">
    <image bind:load="onImgLoad" style="width:{{w}}rpx; height:{{h}}rpx;" src="{{data.img}}"></image>
    <view class="content-container">
        <text class="title">{{data.title}}</text>
        <view class="tags">
            <block wx:for="{{tags}}" wx:key="{{index}}">
                <l-tag type="reading" l-class="l-tag" size="super-mini">{{item}}</l-tag>
            </block>
        </view>
        <view class="price-row">
            <l-price color="#157658" value-size="28" unit-size="20"
                     autofix value="{{p.mainPrice(data.price, data.discount_price)}}"></l-price>
            <l-price color="#999999" size="26" wx:if="{{data.discount_price? true : false}}"
                     deleted value="{{p.slashedPrice(data.price, data.discount_price)}}"
            l-class="discount-price"></l-price>
        </view>
        <text class="subtitle">{{data.subtitle}}</text>
    </view>
</view>